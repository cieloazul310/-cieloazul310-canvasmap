{
  "name": "canvasmap",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier \"packages/*/**/src/**/*.{js,ts}\" --parser typescript --write",
    "lint-staged": "lint-staged",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "{examples,packages}/*/**/src/*/**/*.{cjs,mjs,js,ts}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}