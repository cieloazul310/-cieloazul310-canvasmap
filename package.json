{
  "name": "canvasmap",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "turbo": "turbo",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:package": "turbo run build --filter='./packages/*'",
    "test:examples": "npm run generate --workspace=node-example --workspace=ts-node-example",
    "changeset": "changeset",
    "publish-packages": "npm run build:package && changeset version && changeset publish",
    "format": "prettier \"{examples,packages}/*/**/src/**/*.{js,mjs,cjs,ts}\" --parser typescript --write",
    "lint-staged": "lint-staged",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.9.0",
    "eslint": "^8.53.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "{examples,packages}/*/**/src/*/**/*.{cjs,mjs,js,ts}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}